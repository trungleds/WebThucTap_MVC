@model IEnumerable<WebLtic.Models.TaiXe>

@{
    Layout = null;
}

<link href="~/KetNoi/Theme/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<script src="~/KetNoi/Theme/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/KetNoi/Theme/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<!-- Page level custom scripts -->
<script src="~/KetNoi/Theme/js/demo/datatables-demo.js"></script>

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Danh Sách tài xế</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Hiển thị
                                    </th>
                                    <th>
                                        Họ Tên
                                    </th>
                                    <th>
                                        Biển số Xe
                                    </th>
                                    <th>
                                        Điện Thoại
                                    </th>
                                    <th>
                                        Năm Sinh
                                    </th>
                                    <th>
                                        Ngày Cấp
                                    </th>
                                    <th>
                                        Nơi Cấp
                                    </th>
                                    <th>
                                        Địa Chỉ
                                    </th>
                                    <th>
                                        Lương Cơ Bản
                                    </th>
                                    <th>
                                        Giấy Tờ
                                    </th>
                                    <th>
                                        Diễn Đàn
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.ID
                                        </td>
                                        <td>
                                            @item.HienThi
                                        </td>
                                        <td>
                                            @item.HoTen
                                        </td>
                                        <td>
                                            @item.BienSoXe
                                        </td>
                                        <td>
                                            @item.DienThoai
                                        </td>
                                        <td>
                                            @item.NamSinh.Value.ToString("d/M/yyyy")
                                        </td>
                                        <td>
                                            @item.CCCD
                                        </td>
                                        <td>
                                            @item.NgayCap.Value.ToString("d/M/yyyy")
                                        </td>
                                        <td>
                                            @item.NoiCap
                                        </td>
                                        <td>
                                            @item.DiaChi
                                        </td>
                                        <td>
                                            @item.LuongCB
                                        </td>
                                        <td>
                                            @item.GiayTo
                                        </td>
                                        <td>
                                            @item.DienDan
                                        </td>
                                        <td class="text-center">
                                            <a href="#" class="btn btn-warning btn-sm text-nowrap " onclick="ShowAddUpdateTaiXe(@item.ID)"> <i class="fas fa-solid fa-pen"></i></a>
                                            <a href="#" class="btn btn-danger btn-sm text-nowrap" onclick="ShowDelete(@item.ID)"><i class="fas fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

