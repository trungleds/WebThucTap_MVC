                                        PhiPhatSinh
                                    </th>
                                    <th>
                                        TongPhi
                                    </th>
                                    <th>
                                        BienSoXe
                                    </th>
                                    <th>
                                        ChuHang
                                    </th>
                                    <th>
                                        NgayTao
                                    </th>
                                    <th>
                                        NguoiTao
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgayLapKH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.KhachHang)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgayNhan)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NoiNhanHang)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgayGiaoHang)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NoiGiaoHang)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenHang)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DVT)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SoLuong)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DonGia)
                                        </td>
