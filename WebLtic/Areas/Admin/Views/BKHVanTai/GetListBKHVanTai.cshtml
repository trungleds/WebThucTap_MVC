                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TongPhi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BienSoXe)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChuHang)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgayTao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NguoiTao)
                                        </td>
                                        <td class="text-center">
                                            <a href="#" class="btn btn-warning btn-sm text-nowrap " onclick="ShowAddUpdateBKHVanTai(@item.ID)"> <i class="fas fa-solid fa-pen"></i></a>
                                            <a href="#" class="btn btn-danger btn-sm text-nowrap" onclick="ShowDelete(@item.ID)"><i class="fas fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>

                    </div>
